<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle">
    <!-- 设置按钮四个角的弧度 -->
    <corners android:radius="5dp"/>
    <!-- 填充的颜色 --> 
    <solid android:color="#7CCD7C"/> 
	<!-- 设置文字与按钮四边的间距 -->
	<padding 
	    android:left="1dp"
	    android:top="1dp"
	    android:right="1dp"
	    android:bottom="1dp"/>
</shape>